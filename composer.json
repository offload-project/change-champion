{
    "name": "offload-project/change-champion",
    "description": "A tool to manage versioning and changelogs for Composer packages, inspired by changesets",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "changesets",
        "versioning",
        "changelog",
        "composer",
        "semver"
    ],
    "authors": [
        {
            "name": "Offload Project"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.0||^7.0",
        "symfony/finder": "^6.0||^7.0",
        "composer/semver": "^3.0"
    },
    "require-dev": {
        "captainhook/captainhook-phar": "^5.27",
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpunit/phpunit": "^10.0",
        "ramsey/conventional-commits": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "ChangeChampion\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChangeChampion\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/cc"
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
        "fmt": "vendor/bin/php-cs-fixer fix",
        "fmt-check": "vendor/bin/php-cs-fixer check",
        "enable-hooks": "vendor/bin/captainhook install --only-enabled"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "captainhook/captainhook-phar": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
